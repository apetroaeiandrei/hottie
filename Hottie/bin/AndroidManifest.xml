<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="olectronix.hottie"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="olectronix.hottie.StartScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="olectronix.hottie.config.ConfigActivity"
            android:label="@string/title_activity_config"
            android:parentActivityName="olectronix.hottie.StartScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="olectronix.hottie.StartScreen" />
        </activity>
        <activity
            android:name="olectronix.hottie.config.RegisterPhoneActivity"
            android:label="@string/title_activity_register_phone"
            android:parentActivityName="olectronix.hottie.ConfigActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="olectronix.hottie.ConfigActivity" />
        </activity>
        <!-- <receiver android:name=".SMSReceiver"> -->
        <!-- <intent-filter> -->
        <!-- <action android:name= -->
        <!-- "android.provider.Telephony.SMS_RECEIVED" /> -->
        <!-- </intent-filter> -->
        <!-- </receiver> -->
        <activity
            android:name="olectronix.hottie.config.HeaterIgnitionActivity"
            android:label="@string/title_activity_heater_ignition"
            android:parentActivityName="olectronix.hottie.config.ConfigActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="olectronix.hottie.config.ConfigActivity" />
        </activity>
        <activity
            android:name="olectronix.hottie.config.HeaterTypeActivity"
            android:label="@string/title_activity_heater_type"
            android:parentActivityName="olectronix.hottie.config.ConfigActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="olectronix.hottie.config.ConfigActivity" />
        </activity>
        <activity
            android:name="olectronix.hottie.config.ConfigOutputsActivity"
            android:label="@string/title_activity_configure_outputs"
            android:parentActivityName="olectronix.hottie.config.ConfigActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="olectronix.hottie.config.ConfigActivity" />
        </activity>
        <activity
            android:name="olectronix.hottie.UserSettingsActivity"
            android:label="@string/title_activity_user_settings" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_TASKS" />

</manifest>
